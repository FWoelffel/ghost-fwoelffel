{{!< default}}
{{> header}}
{{> navbar}}
{{! Here goes the content}}
<div id="main-content" class="index">
    <div class="container">
        {{#foreach posts}}
            <div class="row">
                <article class="{{post_class}} col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
                    <div class="col-xs-12">
                        <header>
                            <h2 class="title"><a href="{{url}}">{{title}}</a></h2>
                            <time class="small" datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD, YYYY"}}</time>
                        </header>
                    </div>
                    <div class="col-xs-12 hidden-xs">
                        <section class="excerpt text-justify">
                            <p>{{excerpt}} [...]</p>
                        </section>
                    </div>
                    {{#if tags}}
                    <footer class="col-xs-12 hidden-xs">
                        <ul class="list-inline">
                            {{#foreach tags}}
                                <li>
                                    <a href="{{url}}" title="{{name}}" class="tag-{{id}} label label-primary"><i class="fa fa-tag"></i>{{name}}</a>
                                </li>
                            {{/foreach}}
                        </ul>
                    </footer>
                    {{/if}}
                </article>
            </div>
        {{/foreach}}
    </div>
    {{pagination}}
</div>
{{> footer}}