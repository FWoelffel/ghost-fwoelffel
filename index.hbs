{{!< default}}
{{> header cover=@blog.cover}}
{{> navbar}}
{{! Here goes the content}}
<div id="main-content" class="index">
    <div class="container">
        {{#if posts}}
            {{#foreach posts}}
                <div class="row">
                    <article class="{{post_class}} col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
                        <div class="col-xs-12">
                            <header>
                                <h2 class="title"><a href="{{url}}">{{title}}</a></h2>
                                <time class="small" datetime="{{date format="YYYY-MM-DD"}}"><i class="fa fa-calendar-o"></i>{{date format="MMMM DD, YYYY"}}</time>
                            </header>
                        </div>
                        <div class="col-xs-12 hidden-xs">
                            <div class="excerpt text-justify">
                                <p>{{excerpt}} [...]</p>
                            </div>
                        </div>
                        {{#if tags}}
                            <footer class="col-xs-12 hidden-xs">
                                <ul class="list-inline">
                                    {{#foreach tags}}
                                        <li>
                                            <a href="{{url}}" title="{{name}}" class="tag-{{id}} label label-primary"><i class="fa fa-tag"></i>{{name}}</a>
                                        </li>
                                    {{/foreach}}
                                </ul>
                            </footer>
                        {{/if}}
                    </article>
                </div>
            {{/foreach}}
        {{else}}
            <div class="row">
                <div class="col-xs-12 text-center">Rien Ã  voir...</div>
                <div class="col-xs-12 text-center" style=""><i class="fa fa-frown-o"></i></div>
            </div>
        {{/if}}
        {{pagination}}
    </div>
</div>
{{> footer}}