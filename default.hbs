<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{@blog.title}}</title>
    <meta name="description" content="{{@blog.description}}">
    <base href="{{@blog.url}}">
    <link href="{{asset "css/bootstrap.min.css"}}" rel="stylesheet">
    <link href="{{asset "css/style.css"}}" rel="stylesheet">
    <link href="{{asset "css/font-awesome.min.css"}}" rel="stylesheet">
    {{#if @blog.logo}}
    <link rel="shortcut icon" href="{{@blog.logo}}" type="image/png">
    <link rel="icon" href="{{@blog.logo}}" type="image/png">
    {{/if}}
    {{ghost_head}}
</head>
<body class="{{body_class}}">
<div id="main-wrapper">
{{{body}}}
</div>
{{! Scripts }}
{{ghost_foot}}
<script src="{{asset "js/jquery-2.1.4.min.js"}}"></script>
{{#if @blog.cover}}
    <script src="{{asset "js/backstretch.min.js"}}"></script>
    <script>
        $("#main-header").backstretch($("#main-header").data("cover"));
    </script>
{{/if}}
<script src="{{asset "js/header-animate.js"}}"></script>
<script src="{{asset "js/bootstrap.min.js"}}"></script>
<script src="{{asset "js/script.js"}}"></script>
</body>
</html>