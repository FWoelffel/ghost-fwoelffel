<div class="container">
    <div class="row text-center">
        <nav class="pagination" role="navigation">
            {{#if prev}}
                <a class="newer-posts" href="{{page_url prev}}"><i class="fa fa-arrow-left"></i></a>
            {{/if}}
            <span class="page-number">Page {{page}} sur {{pages}}</span>
            {{#if next}}
                <a class="older-posts" href="{{page_url next}}"><i class="fa fa-arrow-right"></i></a>
            {{/if}}
        </nav>
    </div>
</div>