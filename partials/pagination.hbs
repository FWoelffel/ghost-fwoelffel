{{#is "post"}}
<nav class="row" id="pagination">
    <div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2" role="navigation">
        {{#next_post}}
        <div class="col-xs-12 text-left">
            <a href="{{url}}"><i class="fa fa-arrow-circle-o-left"></i> {{title}}</a>
        </div>
        {{/next_post}}
        {{#prev_post}}
        <div class="col-xs-12 text-right">
            <a href="{{url}}">{{title}} <i class="fa fa-arrow-circle-o-right"></i></a>
        </div>
        {{/prev_post}}
    </div>
</nav>
{{/is}}

{{#is "index, tag, author, paged"}}
    <nav class="row" id="pagination">
        <nav class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 text-center" role="navigation">
            {{#if prev}}<a class="newer-posts" href="{{page_url prev}}"><i class="fa fa-arrow-circle-o-left"></i></a>{{/if}}
            <span class="page-number">{{page}} / {{pages}}</span>
            {{#if next}}<a class="older-posts" href="{{page_url next}}"><i class="fa fa-arrow-circle-o-right"></i></a>{{/if}}
        </nav>
    </nav>
{{/is}}