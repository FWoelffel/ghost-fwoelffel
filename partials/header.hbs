<header id='main-header' data-cover="{{#if cover}}{{cover}}{{else}}{{@blog.cover}}{{/if}}">
    <div class="container-fluid vcenter fullwidth">
        <div class="row" id="title">
            <div class="col-sm-12 text-center">
                <h1 class="heading">{{@blog.title}}</h1>
            </div>
        </div>
        <div class="row" id="subtitle">
            <div class="col-sm-12 text-center">
                <p>{{@blog.description}}<p>
            </div>
        </div>
    </div>
    {{^if no-animation}}
    <canvas id="dotsandlines-canvas" class="hidden-xs" width="100%" height="100%"></canvas>
    {{/if}}
</header>
